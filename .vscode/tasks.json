{
  "version": "2.0.0",
  "tasks": [
    {
      // Creates build directory with default configuration
      "label": "CMake Configure (Release)",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S",
        ".",
        "-B",
        "build/release",
        "-DCMAKE_BUILD_TYPE=Release"
      ]
    },
    {
      // Creates build directory with default configuration
      "label": "CMake Configure (Debug)",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S",
        ".",
        "-B",
        "build/debug",
        "-DCMAKE_BUILD_TYPE=Debug"
      ]
    },
    {
      "label": "CMake: Build Active Target (Release)",
      "type": "shell",
      "dependsOn": [
        "CMake Configure (Release)"
      ],
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}/build/release",
        "--target",
        "${input:activeTarget}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "CMake: Build Active Target (Debug)",
      "type": "shell",
      "dependsOn": [
        "CMake Configure (Debug)"
      ],
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}/build/debug",
        "--target",
        "${input:activeTarget}",
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Run Active Target (Release)",
      "type": "shell",
      "command": "${workspaceFolder}/build/release/${input:activeTarget}",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": [
        "CMake: Build Active Target (Release)"
      ]
    },
    {
      "label": "Run Active Target (Debug)",
      "type": "shell",
      "command": "${workspaceFolder}/build/debug/${input:activeTarget}",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": [
        "CMake: Build Active Target (Debug)"
      ]
    },
    {
      "label": "Run with Valgrind (Debug)",
      "type": "shell",
      "command": "valgrind --leak-check=full --show-reachable=yes --track-origins=yes ${workspaceFolder}/build/debug/${input:activeTarget}",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": [
        "CMake: Build Active Target (Debug)"
      ]
    },
    {
      "label": "Clean",
      "type": "shell",
      "command": "rm -rf ${workspaceFolder}/build",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "inputs": [
    {
      "id": "activeTarget",
      "type": "pickString",
      "description": "Select the target to build or run",
      "options": [
        "DemoTarget"
      ],
      "default": "DemoTarget"
    }
  ]
}