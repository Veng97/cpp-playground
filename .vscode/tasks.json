{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake Configure (Release)",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S",
        ".",
        "-B",
        "build",
        "-DCMAKE_BUILD_TYPE=Release"
      ]
    },
    {
      "label": "CMake Configure (Debug)",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S",
        ".",
        "-B",
        "build",
        "-DCMAKE_BUILD_TYPE=Debug"
      ]
    },
    {
      "label": "Build Target (Release)",
      "type": "shell",
      "dependsOn": [
        "CMake Configure (Release)"
      ],
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}/build",
        "--target",
        "${input:pickTarget}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build Target (Debug)",
      "type": "shell",
      "dependsOn": [
        "CMake Configure (Debug)"
      ],
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}/build",
        "--target",
        "${input:pickTarget}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Run Target (Release)",
      "type": "shell",
      "command": "${workspaceFolder}/build/${input:pickTarget}",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": [
        "Build Target (Release)"
      ]
    },
    {
      "label": "Run Target (Debug)",
      "type": "shell",
      "command": "${workspaceFolder}/build/${input:pickTarget}",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": [
        "Build Target (Debug)"
      ]
    },
    {
      "label": "Run with Valgrind (Debug)",
      "type": "shell",
      "command": "valgrind --leak-check=full --show-reachable=yes --track-origins=yes ${workspaceFolder}/build/${input:pickTarget}",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": [
        "Build Target (Debug)"
      ]
    },
    {
      "label": "Clean",
      "type": "shell",
      "command": "rm -rf ${workspaceFolder}/build",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
  ],
  "inputs": [
    {
      "id": "pickTarget",
      "type": "pickString",
      "description": "Select the target to build or run",
      "options": [
        "DemoTarget"
      ],
      "default": "DemoTarget"
    }
  ]
}